<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_xiu_gai_mi_ma"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context="com.example.c.denglizimeijunqi.denglu.XiuGaiMiMaActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:contentInsetStart="0dp"
        app:contentInsetLeft="0dp">
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/xiugaimima_button"
            android:layout_width="100dp"
            android:layout_height="?attr/actionBarSize"
            android:drawableLeft="@drawable/back"
            android:textSize="24sp"
            android:background="#4052B5"/>
    </android.support.v7.widget.Toolbar>
    <EditText
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/ueser_text"
        android:hint="请输入您的用户名"/>
    <EditText
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/jiu_text"
        android:ems="10"
        android:hint="请输入您的旧密码"/>
    <EditText
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:id="@+id/xin_text"
        android:hint="请输入你的新密码"/>
    <EditText
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/zuixin_text"
        android:hint="请确认您的新密码"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:id="@+id/xiugaiqueding_button"
        android:textSize="20dp"
        android:onClick="sure_to_reset"
        android:background="#1cf718"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消"
        android:id="@+id/quxiaocan_btn"
        android:textSize="20dp"
        android:background="#f71818"
        android:layout_marginTop="10dp"
        android:onClick="xiaohui"/>

</LinearLayout>
