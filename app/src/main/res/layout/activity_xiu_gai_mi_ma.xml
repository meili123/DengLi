<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_xiu_gai_mi_ma"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EFF5"
    tools:context="com.example.c.denglizimeijunqi.XiugaiZhanghaoYouXiang.XiuGaiMiMaActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/xiugaimima_button"
            android:layout_width="100dp"
            android:layout_height="?attr/actionBarSize"
            android:drawableLeft="@drawable/back"
            android:textSize="24sp"
            android:background="#4052B5"/>
    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/view"
        android:layout_below="@id/toolbar"
        android:background="#F0EFF5">
    </View>

    <TextView
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="请输入当前密码"
        android:gravity="center"
        android:textSize="24sp"
        android:id="@+id/textViewW"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edittext"
        android:layout_below="@+id/textViewW"
        android:hint="请输入"
        android:background="#FFFFFF"/>

    <TextView
        android:layout_below="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="请输入新的密码"
        android:gravity="center"
        android:textSize="24sp"
        android:id="@+id/textview1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edittext1"
        android:hint="请输入"
        android:layout_below="@id/textview1"
        android:background="#ffFFFF"/>
    <TextView
        android:layout_below="@+id/edittext1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="请再次输入新的密码"
        android:gravity="center"
        android:textSize="24sp"
        android:id="@+id/textview2"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edittext2"
        android:hint="请输入"
        android:layout_below="@+id/textview2"
        android:background="#FFFFFF"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/button"
        android:text="确认修改"
        android:textSize="24sp"
        android:layout_below="@+id/edittext2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:background="#F0EFF5">
    </Button>


</RelativeLayout>
