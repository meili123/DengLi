<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_she_zhi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F0F6"
    tools:context="com.example.c.denglizimeijunqi.nav_view.SheZhiActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:contentInsetStart="0dp"
        app:contentInsetLeft="0dp">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/shezhi_button"
            android:layout_width="100dp"
            android:layout_height="?attr/actionBarSize"
            android:drawableLeft="@drawable/back"
            android:textSize="24sp"
            android:background="#4052B5"/>
    </android.support.v7.widget.Toolbar>
    <View
        android:layout_below="@+id/toolbar"
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <ListView
        android:id="@+id/shezhi_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_1"
        android:background="#FFFFFF">
    </ListView>
    <View
        android:layout_below="@+id/shezhi_listview"
        android:id="@+id/view_v"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <Button
        android:layout_below="@+id/view_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出当前账号"
        android:textColor="#000000"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:background="#FFFFFF"
        android:textSize="24sp"
        android:id="@+id/tuichu_Button"/>
</RelativeLayout>
